{
  "name": "@schibstedspain/OpenAds",
  "version": "0.0.1",
  "description": "OpenAds: Advertising library",
  "main": "dist/",
  "scripts": {
    "cleanDistFolder": "rm -Rf ./dist",
    "prepublishOnly": "npm run cleanDistFolder && npm run build",
    "build": "babel src --ignore test --out-dir dist ",
    "test": "mocha --recursive --require babel-polyfill --compilers js:babel-register \"src/test/**/*.js\" || true",
    "cover": "./node_modules/.bin/istanbul cover --report html ./node_modules/.bin/_mocha -- ./src/test --recursive --compilers js:babel-register",
    "watch": "onchange 'src/**/*.js' -- npm run build",
    "lint": "npm run lint:js",
    "lint:js": "sui-lint js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scm-spain/OpenAds.git"
  },
  "keywords": [
    "ads",
    "advertising",
    "schibsted"
  ],
  "author": "The Mighty Ducks of Advertising",
  "license": "ISC",
  "devDependencies": {
    "@schibstedspain/sui-lint": "^2.1.0",
    "babel-cli": "^6.24.0",
    "babel-loader": "^7.1.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-sui": "1",
    "babel-register": "^6.24.0",
    "chai": "^4.0.2",
    "html-webpack-plugin": "^2.30.1",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^11.5.1",
    "mocha": "^3.4.2",
    "onchange": "^3.3.0",
    "sinon": "^2.3.4"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "babel": {
    "presets": [
      "sui"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@schibstedspain/sui-lint/eslintrc.js"
    ]
  },
  "dependencies": {
    "@schibstedspain/ast": "^0.11.0",
    "loglevel": "^1.6.0",
    "loglevel-plugin-prefix": "^0.5.3"
  }
}
